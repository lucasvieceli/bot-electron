{
    "appId": "com.bot.app",
    "files": ["dist-webpack/main/bundle.js", "dist-webpack/renderer/**/*", "./assets/**/*", "./python/**/*"],
    "win": {
        "target": ["nsis"],
        "requestedExecutionLevel": "requireAdministrator"
    },
    "directories": {
        "buildResources": "public"
    },
    "mac": {
        "icon": "./assets/images/bcoin.ico"
    },
    "extraFiles": [
        {
            "from": "assets",
            "to": "assets",
            "filter": ["**/*"]
        },
        {
            "from": "python",
            "to": "python",
            "filter": ["**/*"]
        }
    ],
    "linux": {
        "icon": "./assets/images/linux.png",
        "target": [
            { "target": "deb", "arch": ["x64"] },
            { "target": "7z", "arch": ["x64"] }
        ],

        "category": "Education"
    },
    "nsis": {
        "uninstallDisplayName": "CPU Monitor",
        "license": "license.txt",
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}
